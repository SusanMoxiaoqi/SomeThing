<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/by_firstpagebg" >

    <TextView
        android:id="@+id/text_card_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@+id/textView1"
        android:text="1元" />
 
    <ToggleButton
        android:id="@+id/price_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="19dp"
        android:background="@drawable/style_coin_bg"
        android:textOff="1元"  
        android:textOn="1元"/>

    <ToggleButton
        android:id="@+id/price_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/price_1"
        android:layout_alignBottom="@+id/price_1"
        android:layout_marginLeft="22dp"
        android:layout_toRightOf="@+id/price_1"
        android:background="@drawable/style_coin_bg"
        android:text="10元"
        android:textOff="10元"  
        android:textOn="10元" />

    <ToggleButton
        android:id="@+id/price_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/price_10"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/price_10"
        android:background="@drawable/style_coin_bg"
        android:textOff="30元"  
        android:textOn="30元" />

    <ToggleButton
        android:id="@+id/price_50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/price_30"
        android:layout_alignBottom="@+id/price_30"
        android:layout_marginLeft="23dp"
        android:layout_toRightOf="@+id/price_30"
        android:background="@drawable/style_coin_bg"
        android:textOff="50元"  
        android:textOn="50元" />

    <ToggleButton
        android:id="@+id/price_100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/price_50"
        android:layout_alignBottom="@+id/price_50"
        android:layout_marginLeft="22dp"
        android:layout_toRightOf="@+id/price_50"
        android:background="@drawable/style_coin_bg"
        android:textOff="100元"  
        android:textOn="100元" />

    <ToggleButton
        android:id="@+id/price_500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/price_1"
        android:layout_below="@+id/price_1"
        android:layout_marginTop="13dp"
        android:background="@drawable/style_coin_bg"
        android:textOff="500元"  
        android:textOn="500元"/> 

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/price_500"
        android:layout_below="@+id/price_500"
        android:layout_marginTop="11dp"
        android:background="@drawable/by_input_bg"
        android:ems="30"
        android:hint="请输入卡号"
        android:imeOptions="flagNoFullscreen"
        android:maxLines="1"
        android:minLines="1"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp" 
        >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toRightOf="@+id/price_500"
        android:text="付款成功后将于1-10分钟内到账，如遇网络繁忙时请耐心等待。\n若长时间未到账请联系客服咨询。"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="16dp"
        android:text="本次支付金额：" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText2"
        android:layout_below="@+id/button_pay"
        android:layout_marginTop="21dp"
        android:text="温馨提示："
        android:textColor="@android:color/holo_red_light" />

    <Button
        android:id="@+id/button_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText2"
        android:layout_below="@+id/editText2"
        android:layout_marginTop="18dp"
        android:background="@drawable/style_pay_btnbg" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText1"
        android:layout_below="@+id/editText1"
        android:layout_marginTop="16dp"
        android:background="@drawable/by_input_bg"
        android:ems="30"
        android:hint="请输入卡密"
        android:imeOptions="flagNoFullscreen"
        android:inputType="textPassword"
        android:lines="1"
        android:maxLines="1"
        android:minLines="1"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"/>

</RelativeLayout>
