<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/by_pay_content_right"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/button_mo9"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/button_mobilecard"
        android:layout_alignBottom="@+id/button_mobilecard"
        android:layout_alignLeft="@+id/button_alipay"
        android:background="@drawable/mo9_btn_style" />

    <Button
        android:id="@+id/button_alipay"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_above="@+id/button_mobilecard"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="7dp"
        android:background="@drawable/zhifubaobtnstyle" />

    <Button
        android:id="@+id/button_unionpay"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_above="@+id/button_mobilecard"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/button_wechat"
        android:background="@drawable/yinlian_btn_style" />

    <Button
        android:id="@+id/button_wechat"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView5"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="23dp"
        android:layout_toRightOf="@+id/button_alipay"
        android:background="@drawable/weixinzhifu_btn_style" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:text="推荐支付方式"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_alipay"
        android:layout_below="@+id/button_alipay_recommend"
        android:layout_marginTop="16dp"
        android:text="请选择支付方式"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/button_alipay_recommend"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView8"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/zhifubaobtnstyle" />

    <Button
        android:id="@+id/button_gamecard"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/button_mobilecard"
        android:layout_alignBottom="@+id/button_mobilecard"
        android:layout_alignLeft="@+id/button_unionpay"
        android:background="@drawable/youxichongzhi_btn_style" />

    <Button
        android:id="@+id/button_mobilecard"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@+id/button_wechat"
        android:layout_marginTop="21dp"
        android:layout_toLeftOf="@+id/button_unionpay"
        android:background="@drawable/shoujichongzhi_btn_style" />

    <Button
        android:id="@+id/button_yidong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_mo9"
        android:layout_below="@+id/button_mo9"
        android:layout_marginTop="25dp"
        android:background="@drawable/yidong_btn_style" />

    <Button
        android:id="@+id/button_liantong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_yidong"
        android:layout_alignBottom="@+id/button_yidong"
        android:layout_alignLeft="@+id/button_mobilecard"
        android:background="@drawable/liantong_btn_style" />

    <Button
        android:id="@+id/button_dianxin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_liantong"
        android:layout_alignBottom="@+id/button_liantong"
        android:layout_alignLeft="@+id/button_gamecard"
        android:background="@drawable/dianxin_btn_style" />

</RelativeLayout>